{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "target": "ES6",
    "strict": true,
    "pretty": true,
    "types": [
      "./src/types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "tests"
  ]
}
